{% extends 'templates/app.twig' %}

{% block content %}
	<div class="row">
		<div class="col-md-4">
			<img src="{{ product.image }}" alt="{{ product.title }} image" class="thumbnail img-responsive">
		</div>
		<div class="col-md-8">
			{% if product.hasLowStock() %}
				<div class="label label-warning">Low stock</div>
			{% endif %}
			{% if product.outOfStock() %}
				<div class="label label-danger">Out of stock</div>
			{% endif %}

			<h3>{{ product.title }}</h3>
			<p>{{ product.description }}</p>

			{% if product.inStock() %}
				<a href="#" class="btn btn-default btn-sm">Add to cart</a>
			{% endif %}
		</div>
	</div>
{% endblock %}
